{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/container-css.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/scripts.js') }}"></script>

{% endblock %}
{% block body %}
    <div class="container-xl">

        <a href="{{ path('addModule') }}" class="btn btn-primary">Ajouter un Module</a>
        <table id="dtBasicExample" class="table">
            <thead>
            <tr class="tab-content">
                <td>
                <th scope="col">NOM Du module</th>
                </td>
                <td>
                <th scope="col">NOMBRE D'HEURES</th>
                </td>
                <td>
                <th scope="col">ACTION</th>
                </td>
            </tr>
            </thead>
            <tbody>
            {% for module in tabModule %}
                <tr class="table-{% if loop.index is odd %}danger{% else %}warning{% endif %}">
                    <td>
                    <th scope="row">{{ module.nomModule }}</th>
                    </td>
                    <td>
                    <th scope="row">{{ module.nbHeure }}</th>
                    </td>
                    <td>
                    <th scope="row">
                        <a href="{{ path('updateModule', {'id': module.id}) }}" class="btn btn-primary">Modifier</a>
                        <a href="{{ path('deleteModule', {'id': module.id}) }}" class="btn btn-danger">Supprimer</a>
                    </th>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
        <div class="pagination flex justify-content-center mb-8 ">
            {{ knp_pagination_render(tabModule) }}
        </div>

    </div>
{% endblock %}

{% block title %}

{% endblock %}
