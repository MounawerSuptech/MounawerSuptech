{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/container-css.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/scripts.js') }}"></script>

{% endblock %}
{% block body %}
    <div class="container-xl">

        <a href="{{ path('addEtudiant') }}" class="btn btn-primary">Ajouter un Etudiant</a>
        <table  id="dtBasicExample" class="table">
            <thead>
            <tr class="tab-content">
                <td>
                <th scope="col">NOM</th>
                </td>

                <td>
                <th scope="col">PRENOM</th>
                </td>
                <td>
                <th scope="col">ADRESSE</th>
                </td>

                <td>
                <th scope="col">CLASSE</th>
                </td>

                <td>
                <th scope="col">ACTION</th>
                </td>
            </tr>
            </thead>
            <tbody>
            {% for etudiant in tabEtudiant %}
                <tr class="table-{% if loop.index is odd %}danger{% else %}warning{% endif %}">
                    <td>
                    <th scope="row">{{ etudiant.nom }}</th>
                    </td>
                    <td>
                    <th scope="row">{{ etudiant.prenom }}</th>
                    </td>
                    <td>
                    <th scope="row">{{ etudiant.adresse }}</th>
                    </td>
                    <td>
                    <th scope="row">{{ etudiant.classe.nomClasse }}</th>
                    </td>
                    <td>
                    <th scope="row">
                        <a href="{{ path('updateEtudiant', {'id': etudiant.id}) }}" class="btn btn-primary">Modifier</a>
                        <a href="{{ path('deleteEtudiant', {'id': etudiant.id}) }}" class="btn btn-danger">Supprimer</a>
                    </th>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
        <div class="pagination flex justify-content-center mb-8 ">
            {{ knp_pagination_render(tabEtudiant) }}
        </div>

    </div>
{% endblock %}

{% block title %}

{% endblock %}
